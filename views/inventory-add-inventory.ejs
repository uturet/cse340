<%- include('./partials/head') %>
<%- include('./partials/header', { classifications }) %>

<main class="form-page">
  <a class="back-link" href="/inventory">‚Üê Back to Inventory Management</a>
  <h1>Add Inventory</h1>
  <p>Provide as much detail as you can. All fields are required.</p>

  <section class="message-stack">
    <%- messages() %>
    <% if (errors && errors.length) { %>
      <div class="notify error">
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
  </section>

  <form method="post" action="/inventory/add-inventory" class="form-card inventory-form">
    <label for="classification_id">Classification</label>
    <select id="classification_id" name="classification_id" required>
      <option value="">Select a classification</option>
      <% classifications.forEach(cls => { %>
        <option
          value="<%= cls.classification_id %>"
          <%= String(formData?.classification_id) === String(cls.classification_id) ? 'selected' : '' %>
        >
          <%= cls.classification_name %>
        </option>
      <% }) %>
    </select>

    <label for="inv_make">Make</label>
    <input type="text" id="inv_make" name="inv_make" required value="<%= formData?.inv_make || '' %>">

    <label for="inv_model">Model</label>
    <input type="text" id="inv_model" name="inv_model" required value="<%= formData?.inv_model || '' %>">

    <label for="inv_year">Year</label>
    <input type="text" id="inv_year" name="inv_year" pattern="\d{4}" maxlength="4" required value="<%= formData?.inv_year || '' %>">

    <label for="inv_price">Price</label>
    <input type="number" id="inv_price" name="inv_price" min="0" step="1" required value="<%= formData?.inv_price || '' %>">

    <label for="inv_miles">Miles</label>
    <input type="number" id="inv_miles" name="inv_miles" min="0" step="1" required value="<%= formData?.inv_miles || '' %>">

    <label for="inv_color">Color</label>
    <input type="text" id="inv_color" name="inv_color" required value="<%= formData?.inv_color || '' %>">

    <label for="inv_image">Image Path</label>
    <input type="text" id="inv_image" name="inv_image" required value="<%= formData?.inv_image || '/images/vehicles/' %>">

    <label for="inv_thumbnail">Thumbnail Path</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= formData?.inv_thumbnail || '/images/vehicles/' %>">

    <label for="inv_description">Description</label>
    <textarea id="inv_description" name="inv_description" rows="4" required><%= formData?.inv_description || '' %></textarea>

    <button type="submit" class="btn primary">Add Vehicle</button>
  </form>
</main>

<%- include('./partials/footer') %>
