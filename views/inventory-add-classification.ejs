<%- include('./partials/head') %>
<%- include('./partials/header', { classifications, isAuth, accountData }) %>

<main class="form-page">
  <a class="back-link" href="/inventory">‚Üê Back to Inventory Management</a>
  <h1>Add Classification</h1>
  <p>Keep names short and descriptive so shoppers can find vehicles quickly.</p>

  <section class="message-stack">
    <%- messages() %>
    <% if (errors && errors.length) { %>
      <div class="notify error">
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
  </section>

  <form method="post" action="/inventory/add-classification" class="form-card">
    <label for="classification_name">Classification Name</label>
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      placeholder="e.g., Electric"
      maxlength="50"
      required
      value="<%= formData?.classification_name || '' %>"
    >
    <small>Only letters, numbers, and spaces are recommended.</small>

    <button type="submit" class="btn primary">Save Classification</button>
  </form>
</main>

<%- include('./partials/footer') %>
